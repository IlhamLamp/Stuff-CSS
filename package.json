{
  "name": "stuffcss",
  "version": "1.0.6",
  "description": "Minimal CSS Framework for semantic HTML",
  "author": "fajarspace",
  "main": "docs/index.html",
  "homepage": "https://stuffcss.netlify.app",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fajarspace/stuff-css.git"
  },
  "keywords": [
    "css",
    "css-framework",
    "dark-mode",
    "dark-theme",
    "lightweight",
    "minimal",
    "minimalist",
    "minimalistic",
    "native-html",
    "scss-framework",
    "semantic"
  ],
  "bugs": {
    "url": "https://github.com/stuffcss/stuff/issues"
  },
  "scripts": {
    "watch": "npm-run-all --parallel watch:stuff watch:docs:scss watch:docs:html watch:stuff:js watch:docs:js --silent",
    "build": "npm-run-all scss:sorter:stuff build:stuff build:stuff scss:sorter:docs build:docs:css build:docs:js build:docs:html --silent",
    "build:docs": "npm-run-all --parallel build:docs:css build:docs:js build:docs:html --silent",
    "build:docs:css": "npm-run-all css:compile:docs css:prefix:docs css:minify:docs --silent",
    "build:docs:html": "npm-run-all htmlincludes:docs --silent",
    "build:docs:js": "npm-run-all js:bundle:docs:commons js:bundle:docs:customization js:babel:docs:commons js:babel:docs:customization js:babel:docs:grid js:babel:docs:modal js:minify:docs:commons js:minify:docs:customization js:minify:docs:grid js:minify:docs:modal --silent",
    "build:stuff": "npm-run-all css:compile:stuff css:prefix:stuff css:minify:stuff --silent",
    "build:stuff:js": "npm-run-all js:bundle:stuff:commons js:bundle:stuff:customization js:babel:stuff:commons js:babel:stuff:customization js:babel:stuff:grid js:babel:stuff:modal js:minify:stuff:commons js:minify:stuff:customization js:minify:stuff:grid js:minify:stuff:modal --silent",
    "css:compile:docs": "sass --style expanded --source-map --embed-sources --no-error-css docs/scss/:docs/css/",
    "css:compile:stuff": "sass --style expanded --source-map --embed-sources --no-error-css dist/scss/:dist/css/",
    "css:minify:docs": "cleancss -O1 --with-rebase --source-map --source-map-inline-sources --batch --batch-suffix .min docs/css/*.css !docs/css/*.min.css",
    "css:minify:stuff": "cleancss -O1 --with-rebase --source-map --source-map-inline-sources --batch --batch-suffix .min dist/css/*.css dist/css/*/*.css !dist/css/*.min.css !dist/css/*/*.min.css",
    "css:prefix:docs": "postcss --config css --replace docs/css/*.css !docs/css/*.min.css",
    "css:prefix:stuff": "postcss --config css --replace dist/css/*.css dist/css/*/*.css !dist/css/*.min.css",
    "htmlincludes:docs": "html-includes --src docs/src --dest docs --minify minifyJS=true --quiet",
    "js:babel:docs:commons": "babel docs/js/commons.min.js --out-dir docs/js/ --presets=@babel/preset-env --quiet",
    "js:babel:docs:customization": "babel docs/js/customization.min.js --out-dir docs/js/ --presets=@babel/preset-env --quiet",
    "js:babel:docs:grid": "babel docs/js/grid.js --out-file docs/js/grid.min.js --presets=@babel/preset-env --quiet",
    "js:babel:docs:modal": "babel docs/js/modal.js --out-file docs/js/modal.min.js --presets=@babel/preset-env --quiet",
    "js:bundle:docs:commons": "rollup docs/js/commons.js --file docs/js/commons.min.js --format iife --silent",
    "js:bundle:docs:customization": "rollup docs/js/customization.js --file docs/js/customization.min.js --format iife --silent",
    "js:minify:docs:commons": "uglifyjs docs/js/commons.min.js --compress --mangle --output docs/js/commons.min.js",
    "js:minify:docs:customization": "uglifyjs docs/js/customization.min.js --compress --mangle --output docs/js/customization.min.js",
    "js:minify:docs:grid": "uglifyjs docs/js/grid.min.js --compress --mangle --output docs/js/grid.min.js",
    "js:minify:docs:modal": "uglifyjs docs/js/modal.min.js --compress --mangle --output docs/js/modal.min.js",
    "scss:sorter:docs": "postcss --config scss ./docs/scss/**/*.scss --replace",
    "scss:sorter:stuff": "postcss --config scss ./dist/scss/**/*.scss --replace",
    "prebuild:docs:html": "echo '[stuffcss] Create documentation pages'",
    "prebuild:docs:js": "echo '[stuffcss] Bundle and minify documentation .js files'",
    "precss:compile:docs": "echo '[stuffcss] Compile documentation .css file'",
    "precss:compile:stuff": "echo '[stuffcss] Compile stuff .css files'",
    "precss:minify:docs": "echo '[stuffcss] Minify documentation .css file'",
    "precss:minify:stuff": "echo '[stuffcss] Minify stuff .css files'",
    "prescss:sorter:docs": "echo '[stuffcss] Order documentation .scss properties'",
    "prescss:sorter:stuff": "echo '[stuffcss] Order stuff .scss properties'",
    "postbuild:docs:css": "echo '\\033[32m[stuffcss] Documentation .css build done\\033[0m'",
    "postbuild:docs:html": "echo '\\033[32m[stuffcss] Documentation pages done\\033[0m'",
    "postbuild:docs:js": "echo '\\033[32m[stuffcss] Documentation .js build done\\033[0m'",
    "postbuild:stuff": "echo '\\033[32m[stuffcss] stuff library build done\\033[0m'",
    "watch:docs:html": "nodemon --watch docs/src/ --ext html --exec 'npm run build:docs:html'",
    "watch:docs:js": "nodemon --watch docs/js/ --ext js --ignore *.min.js --exec 'npm run build:docs:js'",
    "watch:docs:scss": "nodemon --watch docs/scss/ --ext scss --exec 'npm run build:docs:css'",
    "watch:stuff": "nodemon --watch scss/ --ext dist/scss --exec 'npm run build:stuff'",
    "js:babel:stuff:commons": "babel dist/js/commons.min.js --out-dir js/ --presets=@babel/preset-env --quiet",
    "js:babel:stuff:customization": "babel dist/js/customization.min.js --out-dir dist/js/ --presets=@babel/preset-env --quiet",
    "js:babel:stuff:grid": "babel dist/js/grid.js --out-file dist/js/grid.min.js --presets=@babel/preset-env --quiet",
    "js:babel:stuff:modal": "babel dist/js/modal.js --out-file dist/js/modal.min.js --presets=@babel/preset-env --quiet",
    "js:bundle:stuff:commons": "rollup dist/js/commons.js --file dist/js/commons.min.js --format iife --silent",
    "js:bundle:stuff:customization": "rollup dist/js/customization.js --file dist/js/customization.min.js --format iife --silent",
    "js:minify:stuff:commons": "uglifyjs dist/js/commons.min.js --compress --mangle --output dist/js/commons.min.js",
    "js:minify:stuff:customization": "uglifyjs dist/js/customization.min.js --compress --mangle --output dist/js/customization.min.js",
    "js:minify:stuff:grid": "uglifyjs dist/js/grid.min.js --compress --mangle --output dist/js/grid.min.js",
    "js:minify:stuff:modal": "uglifyjs dist/js/modal.min.js --compress --mangle --output dist/js/modal.min.js",
    "watch:stuff:js": "nodemon --watch dist/js/ --ext js --ignore *.min.js --exec 'npm run build:stuff:js'"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "autoprefixer": "^10.4.12",
    "clean-css-cli": "^5.6.1",
    "css-declaration-sorter": "^6.3.1",
    "html-includes": "^4.4.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0",
    "postcss-scss": "^4.0.5",
    "rollup": "^2.79.1",
    "sass": "^1.55.0",
    "uglify-js": "^3.17.2"
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "not ie > 0"
  ]
}
